{
  "name": "alerta-webui",
  "description": "Deploy alerta web UI to Heroku",
  "keywords": [
    "monitoring",
    "angularjs",
    "bootstrap"
  ],
  "website": "http://alerta.io",
  "repository": "https://github.com/alerta/angular-alerta-webui",
  "success_url": "/",
  "env": {
    "ALERTA_ENDPOINT": {
      "description": "Alerta API endpoint",
      "value": "http://api.alerta.io"
    },
    "PROVIDER": {
      "description": "OAuth2 Provider",
      "value": "google or github"
    },
    "CLIENT_ID": {
      "description": "OAuth2 Client ID",
      "required": false
    }
  }
}

